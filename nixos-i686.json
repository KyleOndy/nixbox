{
  "builders": [
    {
      "boot_wait": "45s",
      "boot_command": [
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort}} > .packer_http<enter>",
        "mkdir -m 0700 .ssh<enter>",
        "curl $(cat .packer_http)/install_rsa.pub > .ssh/authorized_keys<enter>",
        "sudo systemctl start sshd<enter>"
      ],
      "http_directory": "scripts",
      "iso_checksum_type": "sha256",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_private_key_file": "./scripts/install_rsa",
      "ssh_port": 22,
      "ssh_username": "nixos",
      "type": "virtualbox-iso",
      "iso_url": "https://releases.nixos.org/nixos/19.09/nixos-19.09.736.9bbad4c6254/nixos-minimal-19.09.736.9bbad4c6254-i686-linux.iso",
      "iso_checksum": "055f7efca65c81eb073ecf295294085163e7ef28a3fbedd7f195dd8c28217dfd",
      "guest_additions_mode": "disable",
      "format": "ova",
      "guest_os_type": "Linux",
      "disk_size": 57000,
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024",
          "--vram",
          "128",
          "--clipboard",
          "bidirectional"
        ]
      ]
    },
    {
      "boot_wait": "45s",
      "boot_command": [
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort}} > .packer_http<enter>",
        "mkdir -m 0700 .ssh<enter>",
        "curl $(cat .packer_http)/install_rsa.pub > .ssh/authorized_keys<enter>",
        "sudo systemctl start sshd<enter>"
      ],
      "http_directory": "scripts",
      "iso_checksum_type": "sha256",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_private_key_file": "./scripts/install_rsa",
      "ssh_port": 22,
      "ssh_username": "nixos",
      "type": "qemu",
      "iso_url": "https://releases.nixos.org/nixos/19.09/nixos-19.09.736.9bbad4c6254/nixos-minimal-19.09.736.9bbad4c6254-i686-linux.iso",
      "iso_checksum": "055f7efca65c81eb073ecf295294085163e7ef28a3fbedd7f195dd8c28217dfd",
      "disk_interface": "virtio-scsi",
      "qemuargs": [
        [
          "-m",
          "1024"
        ]
      ]
    },
    {
      "boot_wait": "45s",
      "boot_command": [
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort}} > .packer_http<enter>",
        "mkdir -m 0700 .ssh<enter>",
        "curl $(cat .packer_http)/install_rsa.pub > .ssh/authorized_keys<enter>",
        "sudo systemctl start sshd<enter>"
      ],
      "http_directory": "scripts",
      "iso_checksum_type": "sha256",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_private_key_file": "./scripts/install_rsa",
      "ssh_port": 22,
      "ssh_username": "nixos",
      "type": "vmware-iso",
      "iso_url": "https://releases.nixos.org/nixos/19.09/nixos-19.09.736.9bbad4c6254/nixos-minimal-19.09.736.9bbad4c6254-i686-linux.iso",
      "iso_checksum": "055f7efca65c81eb073ecf295294085163e7ef28a3fbedd7f195dd8c28217dfd",
      "memory": 1024,
      "disk_size": 62000,
      "guest_os_type": "Linux"
    }
  ],
  "provisioners": [
    {
      "execute_command": "sudo su -c '{{ .Vars }} {{.Path}}'",
      "type": "shell",
      "script": "./scripts/install.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": false,
        "only": [
          "virtualbox-iso",
          "qemu"
        ]
      }
    ]
  ]
}
